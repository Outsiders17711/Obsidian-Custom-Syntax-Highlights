{
    "name": "latex-syntax-highlight",
    "version": "0.1.0",
    "devDependencies": {
        "esbuild": "^0.25.9"
    },
    "dependencies": {
        "@codemirror/language": "^6.0.0",
        "@codemirror/legacy-modes": "^6.0.0"
    },
    "scripts": {
        "build": "esbuild main.ts --bundle --outfile=main.js --format=cjs --external:obsidian --external:@codemirror/state --external:@codemirror/view --external:@codemirror/language",
        "dev": "esbuild main.ts --bundle --outfile=main.js --format=cjs --external:obsidian --external:@codemirror/state --external:@codemirror/view --external:@codemirror/language --watch"
    }
}

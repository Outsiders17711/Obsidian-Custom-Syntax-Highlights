{
    "name": "custom-syntax-highlights",
    "version": "0.5.1",
    "description": "Display files with custom extensions as syntax-highlighted code blocks in Obsidian reading view.",
    "main": "main.js",
    "type": "module",
    "engines": {
        "node": ">=16"
    },
    "author": "Outsiders17711",
    "authorUrl": "https://github.com/Outsiders17711",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^16.11.6",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "builtin-modules": "3.3.0",
        "esbuild": "0.27.0",
        "eslint": "9.39.1",
        "eslint-plugin-obsidianmd": "0.1.9",
        "globals": "16.5.0",
        "obsidian": "latest",
        "tslib": "2.4.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "@codemirror/language": "^6.0.0",
        "@codemirror/legacy-modes": "^6.0.0"
    },
    "scripts": {
        "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
        "dev": "node esbuild.config.mjs",
        "version": "node version-bump.mjs && git add manifest.json versions.json",
        "lint": "eslint \"**/*.ts\"",
        "lint:fix": "eslint \"**/*.ts\" --fix",
        "lint:check": "eslint \"**/*.ts\" --max-warnings 0",
        "test": "bash scripts/test.sh",
        "test:nobuild": "bash scripts/test.sh nobuild",
        "release:patch": "bash scripts/release.sh patch",
        "release:minor": "bash scripts/release.sh minor",
        "release:major": "bash scripts/release.sh major"
    },
    "config": {
        "tag-version-prefix": ""
    }
}
